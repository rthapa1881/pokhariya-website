---
import Layout from '@/layouts/Layout.astro'

import { contentfulClient } from '@/contentful'

const entries = await contentfulClient.getEntries({
	content_type: 'acadmics',
})
---

<Layout title="Academics | Shree Pokhariya Secondary School">
	<section class="bg-white dark:bg-gray-900">
		<div
			class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-6"
		>
			<div class="mx-auto mb-8 max-w-screen-sm lg:mb-16">
				<h2
					class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
				>
					Academics
				</h2>
				<p class="text-gray-500 sm:text-xl dark:text-gray-400">
					Explore the diverse academic programs offered by Pokhariya
					Secondary School.
				</p>
			</div>
			<div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
				{
					entries.items.map(item => {
						const { name, description, slug } = item.fields

						return (
							<div class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow">
								<a href="#">
									<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
										{name}
									</h5>
								</a>
								<p class="mb-3 font-normal text-gray-700">
									{description.slice(0, 120)}...
								</p>
								<a
									href={`/academics/${slug}`}
									class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-teal-700 rounded-lg hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-teal-300"
								>
									Read more
									<svg
										class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
										aria-hidden="true"
										xmlns="http://www.w3.org/2000/svg"
										fill="none"
										viewBox="0 0 14 10"
									>
										<path
											stroke="currentColor"
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M1 5h12m0 0L9 1m4 4L9 9"
										/>
									</svg>
								</a>
							</div>
						)
					})
				}
			</div>
		</div>
	</section></Layout
>
